<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    android:padding="5dp">
    <LinearLayout
        android:background="@drawable/edittextbackground"
        android:padding="8dp"
        android:id="@+id/single_room_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Room status:"
                android:textColor="@color/black"
                android:textSize="20sp" />
            <TextView
                android:textStyle="bold"
                android:textColor="@color/green"
                android:id="@+id/txtLandlordRoomStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Available"
                android:textSize="20sp"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/Landlord_image"
                android:layout_width="390dp"
                android:layout_height="180dp"
                android:layout_marginTop="5dp" />
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="130dp"
                android:layout_height="80dp"
                android:layout_marginTop="100dp"
                app:civ_border_width="1dp"
                android:src="@drawable/landlord"
                android:id="@+id/imag2"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="130dp"
                android:layout_alignParentRight="true"
                android:layout_height="80dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="100dp"
                app:civ_border_width="1dp"
                android:src="@drawable/landlord"
                android:id="@+id/imag3"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/black"/>
        <LinearLayout
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Room details"
                android:textColor="@color/black"
                android:textSize="20sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Room type   : "
                    android:textColor="@color/black"
                    android:textSize="16sp" />
                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/txtLandlordRoomType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Apartment"
                    android:textSize="14sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Section         : "
                    android:textColor="@color/black"
                    android:textSize="16sp" />
                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/txtLandlordRoomSection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Moteong"
                    android:textSize="14sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Room size   : "
                    android:textColor="@color/black"
                    android:textSize="16sp" />
                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/txtLandlordRoomSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Moteong"
                    android:textSize="14sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Province      : "
                    android:textColor="@color/black"
                    android:textSize="16sp" />
                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/txtLandlordRoomProvince"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Gauteng"
                    android:textSize="14sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Town            : "
                    android:textSize="16sp"/>
                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/txtLandlordRoomTown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tembisa"
                    android:textSize="14sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address      : "
                    android:textSize="16sp"/>
                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/txtLandlordRoomAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 179 ilanda street,moteong,tembisa"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/black"/>
        <LinearLayout
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Room Amount"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Rent              : "
                    android:textColor="@color/black"
                    android:textSize="16sp" />
                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/txtLandlordRoomAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" R1500"
                    android:textSize="14sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deposit        : "
                    android:textSize="16sp"/>
                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/txtLandlordRoomDeposit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" R1500"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/black"/>
        <LinearLayout
            android:padding="5dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Additional features"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/black"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Parking         :"
                        android:textSize="16sp"/>
                    <TextView
                        android:textColor="@color/black"
                        android:id="@+id/LandlordtxtParkingStatus"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Available"
                        android:textSize="16sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bathroom     :"
                        android:textSize="16sp"/>
                    <TextView
                        android:textColor="@color/black"
                        android:id="@+id/LandlordtxtBathroom"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Available"
                        android:textSize="16sp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ceiling          :"
                        android:textSize="16sp"/>
                    <TextView
                        android:textColor="@color/black"
                        android:id="@+id/LandlordtxtCeiling"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Available"
                        android:textSize="16sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tile                :"
                        android:textSize="16sp"/>
                    <TextView
                        android:textColor="@color/black"
                        android:id="@+id/LandlordtxtTile"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Available"
                        android:textSize="16sp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Toilet            : "
                    android:textSize="16sp"/>
                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/LandlordtxtToilet"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Available"
                    android:textSize="16sp"/>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/black"/>
            <ImageView
                android:layout_marginTop="5dp"
                android:layout_below="@id/view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_edit_24"
                android:id="@+id/editroom"/>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_below="@id/view"
                android:id="@+id/changeStatus"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change room status"
                android:layout_centerHorizontal="true"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:background="@drawable/edittextbackground"/>

            <ImageView
                android:layout_marginTop="5dp"
                android:layout_below="@id/view"
                android:id="@+id/deleteroom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_baseline_delete_24" />
        </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>